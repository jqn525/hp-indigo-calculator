    },
    "plasticCoilNotebook": {
      "product": "notebooks",
      "quantity": 25,
      "bindingType": "plasticCoil",
      "finishingSetup": 15.0,
      "finishingCostPerPiece": "0.31 + 2.50 = 2.81",
      "totalFinishingCost": "15.0 + (25 × 2.81) = $85.25"
    },
    "100SheetNotepad": {
      "product": "notepads",
      "quantity": 50,
      "sheets": 100,
      "finishingSetup": 15.0,
      "finishingCostPerPiece": "1.50 + (100 × 0.01) = 2.50",
      "totalFinishingCost": "15.0 + (50 × 2.50) = $140.00"
    }
  },
  
  "usageInstructions": {
    "setupFees": "Apply finishing setup fee only when finishing is required",
    "perPieceCosts": "Multiply finishing cost per piece by quantity",
    "conditionalFinishing": "Check product logic to determine if finishing applies",
    "restrictions": "Verify finishing options are available for selected materials",
    "totalFinishing": "finishingSetup + (quantity × finishingCostPerPiece)"
  }
}